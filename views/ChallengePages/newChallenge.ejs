<% layout('layouts/boilerplate') %>
<div class="min-h-screen flex items-center justify-center py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-md w-full space-y-8 glassmorph p-8 rounded-xl">
    <div>
      <h2 class="mt-6 text-center text-3xl font-extrabold text-white">
        Create a New Challenge
      </h2>
      <% if (activeChallenge) { %>
      <p class="mt-2 text-center text-sm text-yellow-200">
        You are currently working on the challenge
        <span class="font-medium">"<%= activeChallenge.name %>"</span> which will be cancelled when you create
        a new one.
      </p>
      <% } %>
    </div>
    <form class="mt-8 space-y-6" action="/user/<%= user.username %>/challenges/new" method="POST">
      <div class="rounded-md shadow-sm -space-y-px">
        <div>
          <label for="name" class="sr-only">Challenge name</label>
          <input id="name" name="name" type="text" required class="appearance-none rounded-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-t-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm" placeholder="Challenge Name">
        </div>
        <div>
          <label for="description" class="sr-only">Description</label>
          <input id="description" name="description" type="text" required class="appearance-none rounded-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm" placeholder="Description">
        </div>
        <div>
          <label for="challengeType" class="sr-only">Challenge Type</label>
          <select id="challengeType" name="challengeType" required class="appearance-none rounded-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-b-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm">
            <option value="">Choose the period of the Challenge</option>
            <option value="30">30 Days Challenge</option>
            <option value="60">60 Days Challenge</option>
            <option value="100">100 Days challenge</option>
          </select>
        </div>
      </div>

      <div>
        <button type="submit" class="group relative w-full flex justify-center py-2 px-4 border border-transparent text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
          Start Challenge
        </button>
      </div>
    </form>
  </div>
</div>

